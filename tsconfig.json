{
  "compilerOptions": {
    /* Basic Options */
    "incremental": true,
    "target": "es2015",
    "module": "commonjs",
    "declarationMap": true,
    "sourceMap": true,
    "outFile": "./",
    "outDir": "./",
    "rootDir": "./",
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,

    /* Source Map Options */
    "sourceRoot": "",
    "mapRoot": "",
    "inlineSourceMap": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  }
}
