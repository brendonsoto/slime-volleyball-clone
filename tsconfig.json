{
  "compilerOptions": {
    /* Basic Options */
    "incremental": false,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "lib": [
      "dom"
    ],

    /* Strict Type-Checking Options */
    /* "strict": true,  Commenting out temporarily */

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./",
    "esModuleInterop": true,

    /* Source Map Options */
    "sourceRoot": "",
    "mapRoot": "",

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
